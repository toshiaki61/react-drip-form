{
  "name": "react-drip-form",
  "version": "0.0.4",
  "description": "HoC based React forms state manager, Support for validation and normalization.",
  "main": "lib/index.js",
  "scripts": {
    "build": "babel src/ -d lib/ --ignore \"**/__tests__/*\"",
    "test": "npm run test:lint && npm run test:typecheck && npm run test:unit",
    "test:watch": "npm run test:unit -- --watch",
    "test:lint": "eslint \"src/**/*.js\"",
    "test:typecheck": "flow",
    "test:unit": "jest",
    "test:coverage": "npm run test:unit -- --coverage",
    "codecov": "npm run test:coverage && codecov",
    "prebuild": "rimraf lib",
    "prepublish": "npm run build"
  },
  "keywords": [
    "react",
    "reactjs",
    "react-component",
    "form",
    "form-validation",
    "form-normalize",
    "validation",
    "normalize",
    "higher order component",
    "hoc"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tsuyoshiwada/react-drip-form.git"
  },
  "author": "tsuyoshiwada",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tsuyoshiwada/react-drip-form/issues"
  },
  "homepage": "https://github.com/tsuyoshiwada/react-drip-form#readme",
  "files": [
    "lib",
    "test"
  ],
  "peerDependencies": {
    "react": ">=16.3.0",
    "react-dom": ">=16.3.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.6",
    "babel-jest": "^20.0.3",
    "babel-preset-env": "^1.7.0",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-1": "^6.24.1",
    "babel-register": "^6.26.0",
    "codecov": "^3.0.4",
    "enzyme": "^3.3.0",
    "eslint": "^5.2.0",
    "eslint-config-airbnb": "^17.0.0",
    "eslint-plugin-flowtype": "^2.50.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-jest": "^21.18.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.10.0",
    "flow-bin": "^0.77.0",
    "jest": "^23.4.1",
    "react": "^16.4.1",
    "react-addons-test-utils": "^15.6.2",
    "react-dom": "^16.4.1",
    "react-test-renderer": "^16.4.1",
    "rimraf": "^2.6.2"
  },
  "dependencies": {
    "dot-wild": "^3.0.1",
    "drip-form-validator": "^0.0.7",
    "immutable-arrays": "^1.0.2",
    "invariant": "^2.2.4",
    "lodash.foreach": "^4.5.0",
    "lodash.isequal": "^4.5.0",
    "lodash.isplainobject": "^4.0.6",
    "lodash.omitby": "^4.6.0",
    "prop-types": "^15.6.2"
  },
  "jest": {
    "rootDir": "src",
    "testMatch": [
      "**/?(*.)spec.js"
    ]
  }
}
